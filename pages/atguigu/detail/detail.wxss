/* pages/atguigu/detail/detail.wxss */
.detail .post{
  width: 100%;
}
.detail .author-detail{
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.detail .author-detail .avatar{
  width: 64rpx;
  height: 64rpx;
}
.detail .author-detail .author{
  font-size: 30rpx;
  color: #666666;
  font-weight: 300;
  margin-left: 20rpx;
}
.detail .author-detail .publish{
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}
.detail .author-detail .time{
  font-size: 24rpx;
  color: #999999;
  margin-left: 30rpx;
}
.detail .title{
  font-size: 36rpx;
  color: #4b556c;
  font-weight: 700;
  padding-left: 40rpx;
  letter-spacing: 2px;
}

.detail .tool{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row-reverse;
  position: relative;
  margin-right: 40rpx;
}
.detail .tool .collection{
  width: 90rpx;
  height: 90rpx;
}
.detail .tool .share{
  width: 90rpx;
  height: 90rpx;
  margin-left: 40rpx;
}
.detail .tool .level{
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  position: absolute;
  top: 46rpx;
  z-index: -1;
}
.detail .detail-text{
  width: 96%;
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 44rpx;
  letter-spacing: 2px;
  margin: 20rpx 30rpx 0 20rpx;
}

